<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cardview_event_img"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:background="@drawable/ic_menu_gallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintEnd_toEndOf="@id/cardview_event_img"
            app:layout_constraintBottom_toBottomOf="@id/cardview_event_img"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#99FF00">

            <TextView
                android:id="@+id/cardview_event_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="event type"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/cardview_event_img"
            app:layout_constraintTop_toTopOf="@id/cardview_event_img"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/cardview_event_price_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_price_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <TextView
                        android:id="@+id/cardview_event_price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:layout_gravity="right"
                        android:layout_marginRight="4dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="12"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cardview_event_price_img"
                        app:layout_constraintTop_toTopOf="@id/cardview_event_price_img"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardview_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/cardview_event_geopoint_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:srcCompat="@drawable/ic_geopoint_24"
                app:layout_constraintStart_toStartOf="@id/cardview_event_title"
                app:layout_constraintTop_toBottomOf="@+id/cardview_event_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pub name"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/cardview_event_geopoint_img"
                app:layout_constraintTop_toTopOf="@id/cardview_event_geopoint_img"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cardview_event_date_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/ic_baseline_date_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="44dp"
                android:layout_height="15dp"
                android:text="12 Apr"
                android:textSize="11dp"
                app:layout_constraintStart_toEndOf="@id/cardview_event_date_img"
                app:layout_constraintTop_toTopOf="@id/cardview_event_date_img"/>

            <ImageView
                android:id="@+id/cardview_event_time_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/ic_baseline_people_24"
                app:layout_constraintStart_toStartOf="@id/cardview_event_date_img"
                app:layout_constraintTop_toBottomOf="@id/cardview_event_date_img"/>

            <TextView
                android:layout_width="44dp"
                android:layout_height="15dp"
                android:text="12/56"
                android:textSize="11dp"
                app:layout_constraintStart_toEndOf="@id/cardview_event_time_img"
                app:layout_constraintTop_toTopOf="@id/cardview_event_time_img"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>





</LinearLayout>